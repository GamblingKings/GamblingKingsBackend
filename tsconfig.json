{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "target": "es5",
    "outDir": ".build/",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "rootDir": "./"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules/**/*", ".dynamodb/**/*", ".vscode/**/*"]
}
